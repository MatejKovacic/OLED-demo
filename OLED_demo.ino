void setup()   {                
  Serial.begin(9600);
  
  // By default, we'll generate the high voltage from the 3.3V line internally. (Neat!)
  display.begin(SSD1306_SWITCHCAPVCC);
  // Init done.
  
  // Show image buffer on the display hardware.
  // Buffer is intialized with an Adafruit splashscreen internally, so this would display the splashscreen.
  display.display();
  delay(500);                             // splashscreen is displayed for 500 miliseconds (0.5 second)
  
  display.clearDisplay();                 // clear display
  
  // Display some text
  display.setCursor(0,0);                 // start at the top left corner
  display.setTextSize(2);                 // set bigger font
  display.setTextColor(WHITE);            // text color is white (background is black)

  display.println("OLED DEMO");           // display some big text
  display.println();
  
  display.setTextSize(1.5);               // set smaller font

  display.println("CodeWeek delavnice,"); // display some text
  display.println();
  
  display.setTextColor(BLACK, WHITE);     // now text will be inverted (black on white)
  
  display.println("oktober 2017");

  display.display();                      // send picture to a screen
  delay(3000);                            // wait for 3 seconds
}


void loop() {
  display.clearDisplay();                     // clear display

  display.invertDisplay(true);                // invert the display
  display.drawBitmap(0, 0,  fox, 128, 64, 1); // display variable (picture) fox
  display.display();                          // send picture to a screen
 
  delay (2000);                               // wait for 2 seconds
 
  display.clearDisplay();                     // clear display

  display.invertDisplay(true);                // invert the display
  display.drawBitmap(0, 0,  dog, 128, 64, 1); // display variable (picture) dog
  display.display();                          // send picture to a screen
 
  delay (2000);                               // wait for 2 seconds
}

